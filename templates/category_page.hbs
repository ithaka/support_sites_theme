<div class="container-divider"></div>
<div class="container">
  <nav class="sub-nav">
    {{breadcrumbs}}
    {{search submit=false placeholder='Search our help center'}}
  </nav>

  <div class="section knowledge-base">
    <section class="categories blocks">
      <header id="main-content" class="page-header">
        <h1>{{category.name}}</h1>
      </header>

      <ul class="blocks-list">
        {{#each sections}}
        <li class="blocks-item">
          <a href='{{url}}' class="blocks-item-link">
            <h2 class="blocks-item-title">{{name}}</h2>
            {{#if description}}
              <p class="blocks-item-description compact-top">{{description}}</p>
         	  {{/if}}
            </a>
        </li>
        {{/each}}
      </ul>
    </section>
  </div>
</div>
